using System;

class Program
{
    static void Main()
    {
        Console.WriteLine("Dividing");

        Console.Write("Enter Number 1: ");
        string input1 = Console.ReadLine();

        Console.Write("Enter Number 2: ");
        string input2 = Console.ReadLine();

        try
        {
            int numerator = Convert.ToInt32(input1);
            int denominator = Convert.ToInt32(input2);

            int result = numerator / denominator; 

            Console.WriteLine($"{numerator} รท {denominator} = {result}");
        }
        catch (FormatException ex)
        {
            Console.WriteLine("Error: Please enter valid whole numbers only.");
            Console.WriteLine($"Details: {ex.Message}");
        }
        catch (DivideByZeroException ex)
        {
            Console.WriteLine("Error: You cannot divide by zero.");
            Console.WriteLine($"Details: {ex.Message}");
        }
        catch (OverflowException ex)
        {
            Console.WriteLine("Error: The number is too large or too small for Int32.");
            Console.WriteLine($"Details: {ex.Message}");
        }
        catch (Exception ex)
        {
            Console.WriteLine("An unexpected error occurred.");
            Console.WriteLine($"Details: {ex.Message}");
        }
        finally
        {
            Console.WriteLine("Operation complete.");
        }
    }
}


